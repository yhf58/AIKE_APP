<!--模态框------------------------------------------------------------------------------------------------------>

<script>
    $(function () {

        $(".edit").click(function () {

           // alert($(this).parents("tr").children("td:eq(0)").text())
            $.ajax({
                url: "../Admin/Edit",
                dataType: "json",
                data: { "id": $(this).parents("tr").children("td:eq(0)").text() },
                success: function (data) {
                    var type = data.UserType;
                    var phone = data.Phone;
                    var RealName = data.RealName;

                    $("#realName").val(RealName);
                    $("#userType").val(type);
                    $("#phone").val(phone);

                },
                error: function () {

                }

            });

        });

    });
</script>



<script>
    $(function () {

        $("#editBtn").click(function () {
            $.ajax({
                url: "../Admin/Edits",
                dataType: "json",
                data: { "type": $("#userType").val(), "realName": $("#realName").val(), "phone": $("#phone").val() },
                success: function (data) {
                    if (parseInt(data) == 1) {
                        layer.msg("修改成功！", { icon: 1 });
                        setTimeout("location.href='../Admin/User'", 2000);
                    }
                    else {
                        layer.msg("修改失败", { icon: 2 });
                    }
                },
                error: function () {
                    layer.msg("修改失败", { icon: 2 });
                }

            });

        });

    });
</script>


<!--删除用户-->
<script>
    $(function () {
        var u_id;
        $(".delet_btn").click(function () {
            u_id=$(this).parents("tr").children("td:eq(0)").text();
        });
        $(".DeleteUsers").click(function () {
            $.ajax({
                url: "../Admin/DeleteUser",
                dataType: "json",
                data: { "id": u_id },
                success: function (data) {
                    if (parseInt(data) == 1) {
                        layer.msg("删除成功！", { icon: 1 });
                        setTimeout("location.href='../Admin/User'", 2000);
                    }
                    else {
                        layer.msg("删除失败", { icon: 2 });

                    }
                },
                error: function () {
                    layer.msg("删除失败", { icon: 2 });
                }

            });


        });

    });
</script>